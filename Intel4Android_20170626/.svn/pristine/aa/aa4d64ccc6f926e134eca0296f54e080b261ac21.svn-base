<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="OLT中文名称:"
                    android:textSize="13dp"
                    android:textColor="#999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_oltCname"
                    android:text="高东T1-HW5800-OLT15"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="13dp"
                    android:textColor="#323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:scaleType="fitXY"
                android:src="@mipmap/line_read_option"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="OLT安装地点:"
                    android:textSize="13dp"
                    android:textColor="#999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="13dp"
                    android:textColor="#323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:scaleType="fitXY"
                android:src="@mipmap/line_read_option"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="OLT IP:"
                    android:textSize="13dp"
                    android:textColor="#999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_ip"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="13dp"
                    android:textColor="#323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:scaleType="fitXY"
                android:src="@mipmap/line_read_option"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="外层Vlan:"
                    android:textSize="13dp"
                    android:textColor="#999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_vlan"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="13dp"
                    android:textColor="#323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:scaleType="fitXY"
                android:src="@mipmap/line_read_option"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:text="PON口:"
                    android:textSize="13dp"
                    android:textColor="#999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pon"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="13dp"
                    android:textColor="#323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:scaleType="fitXY"
                android:src="@mipmap/line_read_option"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>