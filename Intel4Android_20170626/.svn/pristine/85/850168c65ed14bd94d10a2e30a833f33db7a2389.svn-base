            <!--app:stl_indicatorThickness="0dp"-->
            <!--app:stl_overlineThickness = "0dp"-->
            <!--app:stl_underlineColor = "@color/transparent"-->
            <!--app:stl_dividerColor = "#cccccc"-->
            <!--/>-->
    <!--</FrameLayout>-->
    <!--顶部tab标签容器-->
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        android:layout_below="@id/relative_top_bar"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/black"></android.support.design.widget.TabLayout>
    <LinearLayout
        android:id="@+id/linear_approval"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_tongyi"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@mipmap/ic_rwxz_btn_lq"
            android:textColor="#fff"
            android:text="同意"
            />
        <TextView
            android:id="@+id/tv_butongyi"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@mipmap/ic_rwxz_btn_lq"
            android:textColor="#fff"
            android:text="不同意"
            />
        <TextView
            android:id="@+id/tv_tuihui"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@mipmap/ic_rwxz_btn_lq"
            android:textColor="#fff"
            android:text="退回"
            />
        <TextView
            android:id="@+id/tv_tuichu_faqiren"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@mipmap/ic_rwxz_btn_lq"
            android:textColor="#fff"
            android:text="退回发起人"
            />
        <TextView
            android:id="@+id/tv_zhuanban"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:gravity="center"
            android:background="@mipmap/ic_rwxz_btn_lq"
            android:textColor="#fff"
            android:text="转办"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpages"
        android:layout_below="@id/tab_layout"
        android:layout_above="@id/linear_approval"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
