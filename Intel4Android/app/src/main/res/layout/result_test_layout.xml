<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ff6919"
        >
        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="挂测结果"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">
            <LinearLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="基本信息"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OLT中文名称:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_oltCname"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OLT安装地点:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OLT IP:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_ip"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="外层Vlan:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_vlan"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="PON口:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_pon"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OBD:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_obd"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/line_read_option"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="测试结果"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OLT收光功率:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_olt_shou"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="OLT发光功率:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_olt_fa"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="ONU收光功率:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_onu_shou"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="ONU发光功率:"
                        android:textSize="13dp"
                        android:textColor="#999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_onu_fa"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textSize="13dp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_test_status"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="测试结论:通过/不通过"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp">
                    <TextView
                        android:id="@+id/tv_report_result"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="反馈结果"
                        android:gravity="center"
                        android:background="@mipmap/ic_rwxz_btn_lq"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_report_again"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="重新测试"
                        android:gravity="center"
                        android:background="@mipmap/ic_rwxz_btn_lq"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_report_back"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="返回"
                        android:gravity="center"
                        android:background="@mipmap/ic_rwxz_btn_lq"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>